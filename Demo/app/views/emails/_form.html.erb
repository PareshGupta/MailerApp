<div class="bs-docs-section">
  <div class="row">
    <div class="col-lg-6">
      <div class="well bs-component">
        <%= form_for @email, html: { class: "form-horizontal" } do |f| %>
          <fieldset>
            <legend>Enter Email details</legend>
            <div class="form-group">
              <%= f.label :subject, 'Subject:', class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                <%= f.text_field :subject, class: "form-control" %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :content, 'Content:', class: "col-lg-2 control-label" %>
              <div class="col-lg-10">
                <%= f.text_area :content, class: "form-control" %>
              </div>
            </div>
            <div class="col-lg-10 col-lg-offset-2">
              <%= f.submit %>  
            </div>
          </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>
