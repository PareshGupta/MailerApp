<div class="container">
  <% if notice %>
      <p><%= notice %></p>
    <% elsif alert %>
      <p><%= alert %></p>
  <% end %>
  <div class="bs-docs-section">
    <div class="row">
      <div class="col-lg-12">
        <div class="bs-component">
          <table class="table table-striped table-hover ">
            <thead>
              <tr class="info">
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th></th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @mailboxes.each do |mailbox| %>
                <tr>
                  <td><%= mailbox.firstname %></td>
                  <td><%= mailbox.lastname %></td>
                  <td><%= mailbox.email %></td>
                  <td><%= link_to 'Edit', edit_mailbox_path(mailbox) %></td>
                  <td><%= link_to 'Destroy', mailbox_path(mailbox), method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
  <%= link_to 'New Mailbox', new_mailbox_path %>
</div>
